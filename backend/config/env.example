# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:8000

# Postmark Email Configuration
# Get your API key from: https://account.postmarkapp.com/api_tokens
POSTMARK_API_KEY=

# Email addresses (replace with your actual domain)
FROM_EMAIL=
TO_EMAIL=

# Sales vs Leads routing (Option 2):
# SALES_EMAIL - Contact form submissions (quote requests)
# LEADS_EMAIL - Exit intent popup + Resource download notifications
SALES_EMAIL=
LEADS_EMAIL=

# Optional: Additional recipients
SUPPORT_EMAIL=support@woodenstonemi.com

# Security
SESSION_SECRET=your_session_secret_here

# Rate Limiting (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# Honeypot field name (for spam protection)
HONEYPOT_FIELD_NAME=website

# reCAPTCHA v3 Configuration
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_SCORE_THRESHOLD=0.5

# Admin Token (for accessing logs endpoint)
# Set a secure random token to protect the /api/contact/logs endpoint
# Leave empty to disable token protection (not recommended for production)
ADMIN_TOKEN=

# Render Backend URL (for automated log downloads)
# Optional: Only needed if using download-and-analyze-logs.js script
# Defaults to https://wooden-stone-backend.onrender.com if not set
RENDER_BACKEND_URL=